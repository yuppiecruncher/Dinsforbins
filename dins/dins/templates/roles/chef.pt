<div metal:use-macro="load: ../shared/_layout.pt">
    <div metal:fill-slot="content">

        <div class="content">
            <h1>Welcome to Your Chef Page ${user.name}</h1>
            <div class="col-sm-6" style="background-color:None;">
              <div tal:condition="titles">
                <h3>Current Menu Options:</h3>
              <div class="project" >
                  <div class="title">${titles}</div>
                  <br>
            </div>
            </div>
            <div tal:condition="not titles">
              <h3>There are no meals to display</h3>
            </div>
          </div>
            <div class="col-sm-6" style="background-color:None;">
              <h3>Add a new meal:</h3>
              <form action="" method="POST" class="menu-form">
                <input style="color:black;" name="title" type="text" placeholder=" Meal Title" class="menu-control" value="${title}">
                <textarea style="color:black;" name="itemdescription" rows="4" cols="50" placeholder="Enter description... 200 characters">${menudescription}</textarea>
                <h4>Select dates available.</h4>
                <input style="color:black;" name="available" type="date" class="menu-control">
                  <h4>Enter your intended diners' email address.</h4>
                <input style="color:black;" name="diner_email" type="text" class="menu-control">
                <button type="submit" class="btn btn-lg btn-secondary"> Submit</button>
                <div class="error-msg" tal:condition="error">${error}</div>
              </form>
              <br>
            </div>

        </div>
    </div>
    <div metal:fill-slot="additional-css">
      <link href="${request.static_url('dins:static/css/menu-form.css')}" rel="stylesheet">

    </div>

</div>
