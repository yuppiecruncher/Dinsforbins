<div metal:use-macro="load: ../shared/_layout.pt">
    <div metal:fill-slot="content">

        <div class="content">
            <h1>Welcome to Your Chef Page ${user.name}</h1>
            <div class="container">
              <div class="row">
                <div class="col-sm-6" style="background-color:None;">
                  <h3>Your current menu:</h3>
                  <div class="project" tal:repeat="t titles">
                    <div class="title">${t.name}</div>
                    <div class="description">${t.description}</div>
                    <div class="date">Available Date: ${t.date}</div>
                    _________________________________
                  </div>
                </div>
                <div class="col-sm-6" style="background-color:None;">
                  <h3>Add a new meal:</h3>
                  <form action="" method="POST" class="menu-form">
                    <input name="Title" type="text" placeholder=" Meal Title" class="menu-control">
                    <input name="Description" type="text" placeholder=" Meal Description" class="menu-control">
                    <input name="Available" type="date" class="menu-control">
                    <button type="submit" class="btn btn-lg btn-secondary"> Submit</button>
                  </form>

                </div>
            </div>
            </div>
        </div>
        <div metal:fill-slot="additional-css">
          <link href="${request.static_url('dins:static/css/menu-form.css')}" rel="stylesheet">
        </div>
    </div>
</div>
