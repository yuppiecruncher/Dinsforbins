<div metal:use-macro="load: ../shared/_layout.pt">
    <div metal:fill-slot="content">

        <div class="content">
            <div>
              <form action="" method="POST" class="account-form">
                <h1>Register</h1>
                <input name="name" type="text" placeholder=" Your name (optional)" class="form-control" value="${name}">
                <input name="email" type="text" placeholder=" Your email address (required)" class="form-control" value="${email}">
                <input name="password" type="text" placeholder=" Your password (required)" class="form-control" value="${password}">
                <button type="submit" class="btn btn-lg btn-secondary"> Submit</button>
                <div class="error-msg" tal:condition="error">
                  ${error}
              </form>
            </div>
        </div>
    </div>
    <div metal:fill-slot="additional-css">
      <link href="${request.static_url('dins:static/css/account.css')}" rel="stylesheet">

    </div>
</div>
